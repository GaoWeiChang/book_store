@model List<Product>

<div class="row pb-3 mb-4">
	@foreach(var product in Model){
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow  border-top border-5 rounded">
						@if (product.ProductImages != null && product.ProductImages.Count() > 0)
						{
                            <img style="width: 100%; height: 274px;" src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
						}
						else
						{
							<img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
						}

                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    Price: @product.Price.ToString("c")
                                </p>
                            </div>
                        </div>

                        <div>
                            <a asp-action="Details"
                               asp-route-id="@product.Id"
                               class="btn btn-info form-control mt-2">
                                Details
                            </a>
                        </div>

					</div>
				</div>
			</div>
		</div>
	}
</div>