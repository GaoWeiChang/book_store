@{
	var status = Context.Request.Query["status"];
	var inprocess = "text-primary-emphasis";
	var pending = "text-primary-emphasis";
	var completed = "text-primary-emphasis";
	var approved = "text-primary-emphasis";
	var all = "text-primary-emphasis";

	switch (status)
	{
		case "inprocess":
			inprocess = "active text-primary-emphasis bg-warning";
			break;
		case "pending":
			pending = "active text-primary-emphasis bg-warning";
			break;
		case "completed":
			completed = "active text-primary-emphasis bg-warning";
			break;
		case "approved":
			approved = "active text-primary-emphasis bg-warning";
			break;
		default:
			all = "active text-primary-emphasis bg-warning";
			break;
	}
}

<div class="card mt-4">
	<div class="card-header bg-light">
		<div class="row">
			<div class="col-12 text-center">
				<h1>Order List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="d-flex justify-content-between pb-3 pt-2">
			<span></span>
			<ul class="list-group list-group-horizontal-sm">
				<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
					<li class="list-group-item @inprocess">In Process</li>
				</a>
				<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="pending">
					<li class="list-group-item @pending">Payment Pending</li>
				</a>
				<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="completed">
					<li class="list-group-item @completed">Completed</li>
				</a>
				<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="approved">
					<li class="list-group-item @approved">Approved</li>
				</a>
				<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="all">
					<li class="list-group-item @all">All</li>
				</a>
			</ul>
		</div>
		<table id="tblData" class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Phone Number</th>
					<th>Email</th>
					<th>Status</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts {
	<script src="~/js/order.js"></script>
}