@model Category

<div class="card mt-4">
    <h1 class="card-header bg-secondary text-center">
        Update Category
    </h1>
    <div class="card-body">
        <form method="post">
            <input asp-for="Id" hidden />
            <div>
                <label asp-for="Name" class="form-label mt-4">Category Name</label>
                <input asp-for="Name" class="form-control" placeholder="Category Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="DisplayOrder" class="form-label mt-4">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control" placeholder="Display Order" autocomplete="off">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-info">Update</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}